# Basic configuration
NODE_ENV=development
PORT=3000

# Admin credentials (change these for production)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here

# JWT Secret for authentication (generate a secure random string)
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRES_IN=7d

# Session configuration
SESSION_SECRET=your_secure_session_secret_here
SESSION_MAX_AGE=604800000

# App origin and CORS
APP_ORIGIN=https://www.mouna-ai.com
COOKIE_DOMAIN=.mouna-ai.com
ALLOWED_ORIGINS=https://www.mouna-ai.com,http://localhost:3000,http://localhost:8080,http://127.0.0.1:5500

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Google OAuth (set these in production)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# If not set, backend derives callback from APP_ORIGIN
GOOGLE_CALLBACK_URL=https://www.mouna-ai.com/auth/google/callback

# OpenAI API configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Auto-training microservice (optional)
AUTO_TRAINING_ENABLED=true
AUTO_TRAINING_SERVICE_URL=http://localhost:3001
# Shared internal key between main app and auto-training service (change in prod)
INTERNAL_SERVICE_KEY=change_this_internal_service_key

# Razorpay configuration for payments (INR only)
# Get these from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_live_R5KFWsStzaOKbe
RAZORPAY_KEY_SECRET=52OA5WLCrKnsfftmFSKhY6Kh

# Currency settings (INR only)
DEFAULT_CURRENCY=INR

# Database Configuration
# MongoDB Atlas connection string:
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&ssl=true&tls=true

# For local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/ai-chatbot

# Test API Key for widget testing (same as OPENAI_API_KEY for development)
TEST_API_KEY=your_openai_api_key_here
